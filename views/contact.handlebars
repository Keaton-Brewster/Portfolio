<div class="body row d-none d-lg-flex">
    {{> nav_bar_lg}}

    <div name="contact_me-page" class="text-center col-8 mt-5 ml-5 source-code-pro txt-light">

        <div class="clearfix">
            {{> heresmycard}}

            <form name="inquireLG" class="form-group inquire-form">
                <label>Send cat pics here (or questions, maybe comments. Let's chat)</label>
                <input autocomplete="off" name="inquireLG_subject" class="form-control contact_input" type="text" placeholder="Subject">
                <textarea autocomplete="off" name="inquireLG_text" rows="5" class="form-control contact_input" type="text"
                    placeholder="Your message here"></textarea>
                <input autocomplete="off" id="inquireLG_email" class="form-control contact_input" type="email" name="email"
                    placeholder="Your email address">
                <button type="submit" class="btn bg-secondary form-control contact_input hvr-underline-reveal">s e n
                    d</button>
            </form>

        </div>

        <aside id="socials" class="mt-5 bg-dark clearfix display-3 justify-content-around">
            {{> aside_links}}
        </aside>
    </div>
</div>

